modules = ["nodejs-22", "dotnet-9.0", "web"]
run = "cd backend/src & dotnet run"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "dotnet run"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "Start Full Stack"

[[workflows.workflow]]
name = "Run Full Stack"
author = 46831471
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src && dotnet run"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Run Full Stack Clean"
author = 46831471
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src && dotnet run"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Run Backend Only"
author = 46831471
mode = "sequential"

[[workflows.workflow.tasks]]
