args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Run Full Stack Fixed"
author = 46831471
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src && dotnet run --urls=\"http://0.0.0.0:5002\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Start Services"
author = 46831471
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Stopping any existing processes...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"dotnet run\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"npm run dev\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Starting backend on port 5000...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src && dotnet run --urls=\"http://0.0.0.0:5000\" &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Waiting for backend to start...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 10"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Starting frontend...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Start Full Stack"
author = 46831471
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/src && dotnet run --urls=\"http://0.0.0.0:5000\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && NEXT_PUBLIC_API_BASE_URL=\"http://localhost:5000/api\" npm run dev"
