{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ErsaTrainingDB.db;Cache=Shared;"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "Issuer": "ErsaTraining.API",
    "Audience": "ErsaTraining.Web",
    "ExpirationInDays": 7
  },
  "SendGrid": {
    "ApiKey": "your-sendgrid-api-key",
    "FromEmail": "noreply@ersatraining.com",
    "FromName": "Ersa Training",
    "WebhookKey": "your-sendgrid-webhook-verification-key"
  },
  "Email": {
    "ContactEmail": "contact@ersa.com",
    "FromEmail": "noreply@ersa.com"
  },
  "HyperPay": {
    "ApiUrl": "https://test.oppwa.com",
    "CheckoutUrl": "https://test.oppwa.com/v1/paymentWidgets.js?checkoutId",
    "EntityId": "your-hyperpay-entity-id",
    "AccessToken": "your-hyperpay-access-token",
    "WebhookSecret": "your-hyperpay-webhook-secret"
  },
  "Storage": {
    "Type": "Local",
    "LocalPath": "./storage",
    "ContainerName": "course-materials",
    "Azure": {
      "ConnectionString": "your-azure-storage-connection-string"
    }
  },
  "App": {
    "BaseUrl": "https://api.ersatraining.com"
  },
  "OAuth": {
    "Google": {
      "ClientId": "your-google-client-id",
      "ClientSecret": "your-google-client-secret",
      "RedirectUri": "http://localhost:5000/api/auth/google/callback"
    },
    "Apple": {
      "ClientId": "your-apple-service-id",
      "TeamId": "your-apple-team-id",
      "KeyId": "your-apple-key-id",
      "PrivateKey": "your-apple-private-key"
    }
  },
  "Frontend": {
    "BaseUrl": "http://localhost:3000"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:3002",
      "http://localhost:3003",
      "http://localhost:3004",
      "http://localhost:3005",
      "http://localhost:3006",
      "http://localhost:8080",
      "https://localhost:3000",
      "https://localhost:8080",
      "https://ersatraining.com",
      "https://www.ersatraining.com"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}